<article>
  <h2>{{title}}</h2>
  <p>Posted by {{user.name}} on {{format_date createdAt}}</p>
  <div>{{content}}</div>
</article>
<section>
  <h3>Comments</h3>
  {{#each comments}}
    <div>
      <p>{{comment_text}}</p>
      <p>By {{user.name}} on {{format_date createdAt}}</p>
    </div>
  {{/each}}
  {{#if logged_in}}
    <form id="newCommentForm" class="mt-4">
      <div class="form-group">
        <textarea
          id="commentText"
          class="form-control"
          placeholder="Add a comment..."
        ></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <script src="/js/comment.js"></script>
  {{else}}
    <p><a href="/login">Log in</a> to add a comment.</p>
  {{/if}}
</section>