{{#each posts}}
  <div class="card">
    <div class="card-header">
      <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>{{content}}</p>
        <footer class="blockquote-footer">Posted by {{user.name}} on {{format_date date_created}}</footer>
      </blockquote>
    </div>
  </div>
{{/each}}