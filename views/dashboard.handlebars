<div class="text-center text-success">
  <h2>Your Posts</h2>
</div>
{{#each posts}}
  <article>
    <div class="text-center">
      <h2><a class="text-decoration-none" href="/post/{{id}}">{{title}}</a></h2>
      <p>Created on {{format_date createdAt}}</p>
      <button class="btn btn-danger mb-2" data-id="{{id}}">Delete Me</button>
    </div>
  </article>
{{/each}}
<div
  class="d-flex justify-content-center align-items-center"
>
  <a href="#" class="btn btn-primary" id="newPost">New Post</a>
</div>

<form id="newPostForm" class="mt-4" style="display:none;">
  <div class="form-group mb-2">
    <input
      type="text"
      id="postTitle"
      class="form-control"
      placeholder="Post Title"
    />
  </div>
  <div class="form-group mb-2">
    <textarea
      id="postContent"
      class="form-control"
      placeholder="Post Content"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-success mb-2">Submit</button>
</form>
<script src="/js/post.js"></script>