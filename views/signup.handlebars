<h2>Sign Up</h2>
<form id="signupForm">
  <div class="form-group mb-2">
    <input type="text" id="username" class="form-control" placeholder="Username" required autocomplete="username">
  </div>
  <div class="form-group mb-2">
    <input type="password" id="password" class="form-control" placeholder="Password" required autocomplete="new-password">
  </div>
  <button type="submit" class="btn btn-primary mb-2">Sign Up</button>
</form>
<p class="mt-2 mb-2">Already have an account? <a href="/login">Log in here</a>.</p>
<script src="/js/login.js"></script>
